<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_theme_color"
    android:orientation="vertical"
    android:paddingStart="@dimen/_1sdp"
    android:paddingEnd="@dimen/_1sdp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:text="Enter the number of guests"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        android:padding="@dimen/_5sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/_1sdp">
        <TextView
            android:id="@+id/txtOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="1"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"

            android:gravity="center"/>
        <TextView
            android:id="@+id/txtTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="2"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_1sdp" />
        <TextView
            android:id="@+id/txtThree"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="3"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_1sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/_1sdp">
        <TextView
            android:id="@+id/txtFour"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="4"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtFive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="5"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_1sdp" />
        <TextView
            android:id="@+id/txtSix"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="6"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_1sdp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/_1sdp">
        <TextView
            android:id="@+id/txtSeven"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="7"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtEight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="8"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_1sdp" />
        <TextView
            android:id="@+id/txtNine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="9"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_1sdp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/_1sdp">
        <TextView
            android:id="@+id/txtTen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="10"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtEleven"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="11"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_1sdp" />
        <TextView
            android:id="@+id/txtTweleve"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="12"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_1sdp" />

    </LinearLayout>
</LinearLayout>